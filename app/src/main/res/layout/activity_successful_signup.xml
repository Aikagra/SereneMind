<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".SuccessfulSignupActivity">

    <ImageView
        android:id="@+id/vec_success"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/reg_success"
        />

    <TextView
        android:id="@+id/welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Aikagra"
        android:textColor="#1D1617"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vec_success"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="You are all set now, now let's work on becoming the best versions of ourselves"
        android:textColor="#7B6F72"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcome_user"
        />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="goToHome"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_go_to_home_btn"
        android:text="Log In" />


</RelativeLayout>